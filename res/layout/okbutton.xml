<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/legal_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:gravity="center_horizontal"
	android:layout_height="wrap_content">

	<TextView
	    android:id="@+id/legal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="5px"
	    android:autoLink="web"
	    android:gravity="left"
	    android:paddingLeft="10px"
	    android:paddingRight="10px"
	    android:text="Legal"
	    android:textSize="13px" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/layout_root" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:padding="10dp">
		<Button android:id="@+id/agree" android:layout_weight="1"
			android:layout_width="200px" android:layout_height="wrap_content"
			android:text="OK" />
		
	</LinearLayout>

</LinearLayout>