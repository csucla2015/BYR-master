<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="wrap_content">

  <LinearLayout 
              android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView1"
        android:background="@layout/header_gradient"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <!-- Logo Start -->

        <ImageView
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/byr"
            android:visibility="visible" />
        
        <View
  android:layout_width="1dp"
  android:layout_height="30dp">
</View>
<View
  android:layout_width="1dp"
  android:layout_height="30dp">
</View>
<View
  android:layout_width="1dp"
  android:layout_height="30dp">
</View>
<View
  android:layout_width="1dp"
  android:layout_height="30dp">
</View>
<View
  android:layout_width="1dp"
  android:layout_height="30dp">
</View>

  </LinearLayout>

  <ScrollView android:layout_width="fill_parent"
    android:layout_below="@id/detailsTop" android:layout_height="wrap_content"
    android:layout_weight="1">
    <LinearLayout android:orientation="vertical"
      android:layout_height="wrap_content" android:layout_width="fill_parent">
             <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/byr"
            android:visibility="visible" />
             <View
  android:layout_width="1dp"
  android:layout_height="10dp">
</View>
     <Button
    android:id="@+id/button6"
    style="@style/ButtonText"
    android:layout_width="match_parent"
    android:layout_height="55dp"
android:background="@drawable/btn_grey"
      android:textColor="#000000"    
      android:maxLines="4"
    android:singleLine="false"
    android:text="Prizes"
    android:textSize="20sp" >

</Button>
  
<Button
    android:id="@+id/button6"
    style="@style/ButtonText"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/btn_black"
    android:maxLines="4"
    android:singleLine="false"
    android:text="Most Free Throws In A Minute\n1st  = $100\n2nd = $75\n3rd = $25"
    android:textSize="17sp" >

</Button>
<Button
    android:id="@+id/button7"
    style="@style/ButtonText"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/btn_black"
    android:maxLines="5"
    android:singleLine="false"
    android:text="Most Cumulative Free Throws \n1st  = $100\n2nd = $75\n3rd = $25"
    android:textSize="17sp" >

</Button>

<Button
    android:id="@+id/button8"
    style="@style/ButtonText"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/btn_black"
    android:maxLines="4"
    android:singleLine="false"
    android:text="Most Free Throws in a Minute \n(Daily)\n1st = $10"
    android:textSize="17sp" >

</Button>
    </LinearLayout>
  </ScrollView>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:background="@color/black"
      android:orientation="horizontal" >

       <Button
           android:id="@+id/button1"
           style="@style/ButtonText"
           android:layout_width="200px"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/btn_red"
           android:text="Let&apos;s Play"
           android:textSize="16sp" />

    <Button
        android:id="@+id/button2"
        style="@style/ButtonText"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_red"
        android:text="Leaderboard"
        android:textSize="16dp" />

  </LinearLayout>
  
</RelativeLayout>
